#!/bin/bash

. "${BASH_SOURCE%/*}/funcs.sh" "$1"

check_filesize() {
    FILE="$1.${FILEEXT}"
    MIN="$2"
    MAX="$3"

    if [ -z ${MAX}  ]
    then
        MAX=${MIN}
    fi

    SIZE=$(stat -c %s "${DIRNAME}/${FILE}")
    echo "File: ${FILE}"
    if [ ${MIN} -eq ${MAX} ]
    then
        echo "Size: ${SIZE} (expected ${MIN})"
    else
        echo "Size: ${SIZE} (expected ${MIN}...${MAX})"
    fi

    if [ ${SIZE} -ge ${MIN} -a ${SIZE} -le ${MAX} ]
    then
        echo "Pass"
    else
        echo "FAIL!"
        exit 1
    fi
}

# Ensure log contains file sizes, predicted and actual
cat "${DIRNAME}/obama.${FILEEXT}" > /dev/null
cat "${DIRNAME}/raven.${FILEEXT}" > /dev/null

if [ "${DESTTYPE}" == "mp4" ];
then
    # mp4
    check_filesize "obama" 100547 103185
    check_filesize "raven" 130730 139098
elif [ "${DESTTYPE}" == "mp3" ];
then
    # mp3
    check_filesize "obama" 97231 97272
    check_filesize "raven" 126430 126459
elif [ "${DESTTYPE}" == "wav" ];
then
    # wav
    check_filesize "obama" 1058636
    check_filesize "raven" 1849780 3699264
elif [ "${DESTTYPE}" == "ogg" ];
then
    # ogg
    check_filesize "obama" 66168 66201
    check_filesize "raven" 124449 141211
elif [ "${DESTTYPE}" == "webm" ];
then
    # webm
    check_filesize "obama" 85231 92398
    check_filesize "raven" 130581 149735
elif [ "${DESTTYPE}" == "opus" ];
then
    # opus
    check_filesize "obama" 83532 89385
    check_filesize "raven" 124449 127540 
elif [ "${DESTTYPE}" == "mov" ];
then
    # mov
    check_filesize "obama" 100515 103132
    check_filesize "raven" 130680 139073
elif [ "${DESTTYPE}" == "aiff" ];
then
    # aiff
    check_filesize "obama" 1058454 1058506
    check_filesize "raven" 1849654 1849696
elif [ "${DESTTYPE}" == "prores" ];
then
    # prores
    check_filesize "obama" 1059275 1061039
    check_filesize "raven" 1850485 1853884
elif [ "${DESTTYPE}" == "alac" ];
then
    # aiff
    check_filesize "obama" 208260 208694
    check_filesize "raven" 1739034 1740298
elif [ "${DESTTYPE}" == "ts" ];
then
    # ts
    check_filesize "obama" 150400 153408
    check_filesize "raven" 196084 213568
else
echo "Internal error, unknown type ${DESTTYPE}. Fix script!"
exit 99
fi

