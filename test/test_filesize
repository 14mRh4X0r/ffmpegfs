#!/bin/bash

. "${BASH_SOURCE%/*}/funcs.sh" "$1"

check_filesize() {
    FILE="$1.${DESTTYPE}"
    MIN="$2"
    MAX="$3"

    if [ -z ${MAX}  ]
    then
        MAX=${MIN}
    fi

    SIZE=$(stat -c %s "${DIRNAME}/${FILE}")
    echo "File: ${FILE}"
    if [ ${MIN} -eq ${MAX} ]
    then
        echo "Size: ${SIZE} (expected ${MIN})"
    else
        echo "Size: ${SIZE} (expected ${MIN}...${MAX})"
    fi

    if [ ${SIZE} -ge ${MIN} -a ${SIZE} -le ${MAX} ]
    then
        echo "Pass"
    else
        echo "FAIL!"
        exit 1
    fi
}

# Ensure log contains file sizes, predicted and actual
cat "${DIRNAME}/obama.${DESTTYPE}" > /dev/null
cat "${DIRNAME}/raven.${DESTTYPE}" > /dev/null

if [ "${DESTTYPE}" == "mp4" ];
then
    # mp4
    check_filesize "obama" 99151 113048
    check_filesize "raven" 130730 137986
elif [ "${DESTTYPE}" == "mp3" ];
then
    # mp3
    check_filesize "obama" 107101
    check_filesize "raven" 126456
elif [ "${DESTTYPE}" == "wav" ];
then
    # wav
    check_filesize "obama" 1058636
    check_filesize "raven" 3699406
elif [ "${DESTTYPE}" == "ogg" ];
then
    # ogg
    check_filesize "obama" 66181
    check_filesize "raven" 141211
else
echo "Internal error, unknown type ${DESTTYPE}. Fix script!"
exit 99
fi
